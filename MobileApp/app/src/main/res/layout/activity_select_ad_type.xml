<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAdType">

    <Button
        android:id="@+id/btnSelectCrop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_btn_select_buyer"
        android:text="@string/text_add_vegetable"
        android:textColor="@color/colorTextNegative"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrops"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_btn_select_buyer"
        android:text="@string/text_add_crop"
        android:textColor="@color/colorTextNegative"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSelectCrop"
        app:layout_constraintEnd_toEndOf="@+id/btnSelectCrop"
        app:layout_constraintStart_toStartOf="@+id/btnSelectCrop" />

    <Button
        android:id="@+id/btnFruit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_btn_select_buyer"
        android:text="@string/text_add_fruit"
        android:textColor="@color/colorTextNegative"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSelectCrop"
        app:layout_constraintStart_toStartOf="@+id/btnSelectCrop"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectCrop" />

</androidx.constraintlayout.widget.ConstraintLayout>